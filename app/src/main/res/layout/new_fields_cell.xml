<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <EditText
        android:id="@+id/content_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/type_btn"
        android:hint="@string/field_name"
        android:inputType="text"
        android:textAlignment="center"
        style="@style/Widget.App.EditText.20p"
        tools:ignore="Autofill,LabelFor" />

    <CheckBox
        android:id="@+id/type_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@id/content_field"
        app:layout_constraintBottom_toBottomOf="@id/content_field"
        app:layout_constraintEnd_toStartOf="@id/visibility_btn"
        style="@style/Widget.App.CheckBox"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/visibility_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/content_field"
        app:layout_constraintBottom_toBottomOf="@id/content_field"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.App.Switch"/>

</androidx.constraintlayout.widget.ConstraintLayout>