<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.passwordDetails.PasswordDetailsFragment">

    <com.nativeboys.couchbase.lite.android.dao.helper.views.FocusableConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/dismiss_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/remove_icon"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/headline_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dismiss_btn"
            app:layout_constraintBottom_toBottomOf="@id/dismiss_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/add_password"
            style="@style/mainHeadlineStyle" />

        <ImageView
            android:id="@+id/submit_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/check_icon_4"
            tools:ignore="ContentDescription" />

        <!--app:tint="@android:color/white"-->

    </com.nativeboys.couchbase.lite.android.dao.helper.views.FocusableConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <com.nativeboys.couchbase.lite.android.dao.helper.views.FocusableConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/website_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/website_headline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/website_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/website"
                    style="@style/editTextHeadlineStyle"/>

                <EditText
                    android:id="@+id/website_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/website_headline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:inputType="textEmailAddress"
                    style="@style/editTextStyle"
                    tools:ignore="Autofill,LabelFor"
                    android:text="Instagram"/>

                <ImageView
                    android:id="@+id/clear_website_btn"
                    app:layout_constraintEnd_toEndOf="@id/website_field"
                    app:layout_constraintTop_toTopOf="@id/website_field"
                    style="@style/removeTextImageStyle"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/email_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/website_container"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container">

                <TextView
                    android:id="@+id/email_headline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/email_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/email_username"
                    style="@style/editTextHeadlineStyle"/>

                <EditText
                    android:id="@+id/email_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/email_headline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:inputType="textEmailAddress"
                    style="@style/editTextStyle"
                    tools:ignore="Autofill,LabelFor"
                    android:text="yasir@gmail.com"/>

                <ImageView
                    android:id="@+id/clear_email_btn"
                    app:layout_constraintEnd_toEndOf="@id/email_field"
                    app:layout_constraintTop_toTopOf="@id/email_field"
                    style="@style/removeTextImageStyle"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/email_container"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container">

                <TextView
                    android:id="@+id/password_headline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/password_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/password"
                    style="@style/editTextHeadlineStyle"/>

                <EditText
                    android:id="@+id/password_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/password_headline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:inputType="textPassword"
                    style="@style/editTextStyle"
                    tools:ignore="Autofill,LabelFor"
                    android:text="fsdfdfsfsfds"/>

                <ImageView
                    android:id="@+id/clear_password_btn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="@id/password_field"
                    app:layout_constraintTop_toTopOf="@id/password_field"
                    android:src="@drawable/visibility_icon"
                    app:tint="@color/gray"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/generate_password_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/password_container"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container"
                android:background="@drawable/btn_shape"
                android:fontFamily="@font/breeze_sans_medium"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="@string/generate_password"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notes_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/generate_password_btn"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container">

                <TextView
                    android:id="@+id/notes_headline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/notes_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/notes"
                    style="@style/editTextHeadlineStyle"/>

                <EditText
                    android:id="@+id/notes_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/notes_headline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:inputType="textMultiLine"
                    style="@style/editTextStyle"
                    tools:ignore="Autofill,LabelFor"
                    android:text="This is a note bla bla..."/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/thumbnails_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/notes_container"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container"
                android:text="@string/thumbnail"
                style="@style/editTextHeadlineStyle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/thumbnails_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/thumbnails_headline"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container"
                android:layout_marginTop="5dp"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/tags_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/thumbnails_recycler_view"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container"
                android:text="@string/tags"
                style="@style/editTextHeadlineStyle"/>

            <RelativeLayout
                android:id="@+id/tags_container"
                app:layout_constraintTop_toBottomOf="@id/tags_headline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/website_container"
                app:layout_constraintEnd_toEndOf="@id/website_container"
                app:layout_constraintVertical_bias="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tags_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:nestedScrollingEnabled="false"/>

            </RelativeLayout>

        </com.nativeboys.couchbase.lite.android.dao.helper.views.FocusableConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>