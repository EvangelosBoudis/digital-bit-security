<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/settings_btn"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/settings_icon"
        app:tint="@android:color/white"
        style="@style/HeaderImageStyle"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/headline_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/settings_btn"
        app:layout_constraintBottom_toBottomOf="@id/settings_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/items"
        style="@style/MainHeadlineStyle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_btn"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/settings_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/search_icon_50p"
        android:tint="@color/cyan"
        style="@style/HeaderShapeableImageStyleP8" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filters_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/settings_btn"
        app:layout_constraintStart_toStartOf="@id/settings_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="70dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/filters_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/plus_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/PlusButtonStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>