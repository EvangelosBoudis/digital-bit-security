<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/HeaderContainerStyle">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/leading_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/remove_icon_35p"
        app:tint="@android:color/white"
        style="@style/HeaderShapeableImageStyleP8" />

    <TextView
        android:id="@+id/headline_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/leading_btn"
        app:layout_constraintBottom_toBottomOf="@id/leading_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/MainHeadlineStyle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/trailign_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_icon_50p"
        android:tint="@color/cyan"
        style="@style/HeaderShapeableImageStyleP8" />

</androidx.constraintlayout.widget.ConstraintLayout>