<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.items.ItemsFragment">

    <ImageView
        android:id="@+id/app_icon_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/security_icon"
        app:tint="@android:color/white"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/app_icon_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/cyan"
        android:src="@drawable/ic_baseline_tune_24"
        android:background="@drawable/transparent_circle_shape"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/categories_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/filter_by_category"
        app:layout_constraintTop_toBottomOf="@id/app_icon_holder"
        app:layout_constraintStart_toStartOf="@id/app_icon_holder"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/breeze_sans_light"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/categories_headline"
        app:layout_constraintStart_toStartOf="@id/app_icon_holder"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="70dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/categories_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/plus_btn"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/cyan"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@drawable/transparent_circle_shape"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>