<?xml version="1.0" encoding="utf-8"?>
<com.zeustech.zeuskit.ui.views.FocusableConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.searchEngine.SearchEngineFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dismiss_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/remove_icon_35p"
            app:tint="@android:color/white"
            style="@style/headerShapeableImageStyle" />

        <TextView
            android:id="@+id/headline_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dismiss_btn"
            app:layout_constraintBottom_toBottomOf="@id/dismiss_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/search_password"
            style="@style/mainHeadlineStyle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_field_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/search_field_shape">

        <ImageView
            android:id="@+id/search_holder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/search_icon"
            app:tint="@color/cyan"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/search_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_holder"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textColorHint="@color/gray3"
            android:textColor="@color/gray"
            app:backgroundTint="@color/cyan"
            android:background="@android:color/transparent"
            android:fontFamily="@font/breeze_sans_regular"
            android:hint="@string/search_by"
            tools:ignore="Autofill,LabelFor,TextFields" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/description_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_field_container"
        app:layout_constraintStart_toStartOf="@id/search_field_container"
        app:layout_constraintEnd_toEndOf="@id/search_field_container"
        android:layout_marginTop="15dp"
        android:text="@string/choose_these"
        android:textAlignment="center"
        style="@style/editTextHeadlineStyle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/passwords_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/description_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</com.zeustech.zeuskit.ui.views.FocusableConstraintLayout>