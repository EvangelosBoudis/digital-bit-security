<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="BottomSheetDialogTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainHeadlineStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderImageStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="HeaderShapeableImageStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="android:background">@color/blackTransparent</item>
        <item name="shapeAppearanceOverlay">@style/CircleImageStyle</item>
    </style>

    <style name="HeaderShapeableImageStyleP8" parent="HeaderShapeableImageStyle">
        <item name="android:padding">8dp</item>
    </style>

    <style name="PlusButtonStyle" parent="HeaderShapeableImageStyle">
        <item name="android:layout_margin">20dp</item>
        <item name="android:src">@drawable/add_icon_40p</item>
        <item name="android:tint">@color/cyan</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ThumbnailStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FieldHeadlineCapsStyle" parent="FieldHeadlineStyle">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FieldHeadlineStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/breeze_sans_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">2.5dp</item>
        <item name="android:paddingEnd">2.5dp</item>
    </style>

    <style name="FieldStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/field_background_tint_color</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="FieldDrawableStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">8dp</item>
        <item name="tint">@color/gray</item>
    </style>

    <style name="FieldDeleteDrawableStyle" parent="FieldDrawableStyle">
        <item name="android:src">@drawable/remove_icon</item>
    </style>

    <style name="FieldCopyDrawableStyle" parent="FieldDrawableStyle">
        <item name="android:src">@drawable/copy_icon</item>
    </style>

    <style name="ViewLineStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grayTransparent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ButtonStyle" parent="ButtonTextStyle">
        <item name="android:background">@drawable/btn_shape</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:fontFamily">@font/breeze_sans_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NonButtonBackgroundStyle">
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="NonButtonStyle" parent="NonButtonBackgroundStyle">
        <!--Same with ButtonTextStyle-->
        <item name="android:fontFamily">@font/breeze_sans_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NonButtonDrawableStyle">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="HeaderContainerStyle">
        <item name="android:background">@color/black</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>