<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="bottomSheetDialogTheme">@style/FragmentDialogTheme</item>
        <!--<item name="textAppearanceButton">@style/TextAppearance.App.Button</item>-->
        <!--<item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>-->
        <!--<item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>-->
        <!--<item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>-->
    </style>

    <!-- FragmentDialog -->

    <style name="FragmentDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Dialog.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_light</item>
    </style>

    <!-- TextView -->

    <style name="Widget.App.TextView.Headline" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
    </style>

    <style name="Widget.App.TextView.Headline2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
    </style>

    <style name="Widget.App.TextView.Headline3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_light</item>
    </style>

    <style name="Widget.App.TextView.Headline4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_light</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">2.5dp</item>
        <item name="android:paddingEnd">2.5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:fontFamily">@font/breeze_sans_medium</item>
    </style>

    <!-- EditText -->

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
        <item name="backgroundTint">@color/field_background_tint_color</item>
    </style>

    <style name="Widget.App.EditText.Padding" parent="Widget.App.EditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="EditText.Drawable" parent="">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">8dp</item>
        <item name="tint">@color/lightGray</item>
    </style>

    <!-- CheckBox -->

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/widget_tint</item>
        <item name="android:fontFamily">@font/breeze_sans_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Switch -->

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="buttonTint">@color/widget_tint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="Widget.App.Switch.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
    </style>

    <!-- Spinner -->

    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:popupBackground">?attr/popupMenuBackground</item>
        <item name="android:popupElevation">8dp</item>
        <item name="android:popupWindowStyle">?attr/listPopupWindowStyle</item>
    </style>

    <!-- RadioButton -->

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/widget_tint</item>
        <item name="android:fontFamily">@font/breeze_sans_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BottomNavigationView -->

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@color/menu_colors</item>
        <item name="itemTextColor">@color/menu_colors</item>
        <item name="itemTextAppearanceActive">@style/Widget.App.BottomNavigationView.Text</item>
        <item name="itemTextAppearanceInactive">@style/Widget.App.BottomNavigationView.Text</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="Widget.App.BottomNavigationView.Text">
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
    </style>

    <!-- Button (Regular) -->

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/darkGray</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <!--<item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/breeze_sans_regular</item>
        <item name="android:fontFamily">@font/breeze_sans_regular</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item>
    </style>

    <!-- Button (Circle) -->

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="backgroundTint">@color/darkGray</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.Regular" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="android:layout_width">37dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.Big" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ImageView -->

    <style name="Widget.App.ImageView.Thumbnail" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="Widget.App.ImageView.Button1" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:padding">16dp</item>
        <item name="tint">@android:color/white</item>
        <item name="android:background">@drawable/add_btn_shape</item>
    </style>

    <style name="Widget.App.ImageView.Button2" parent="">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:padding">7dp</item>
    </style>

    <!-- Other -->

    <style name="HeaderContainer">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="Container">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:paddingEnd">19dp</item>
    </style>

    <style name="ViewLine" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/darkGray</item>
    </style>

    <style name="ViewLine10m" parent="ViewLine">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

