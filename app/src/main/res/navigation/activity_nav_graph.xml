<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nativeboys.password.manager.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_categoryConstructorFragment"
            app:destination="@id/categoryConstructorFragment" />
        <action
            android:id="@+id/action_homeFragment_to_itemConstructorFragment"
            app:destination="@id/itemConstructorFragment" />

        <action
            android:id="@+id/action_homeFragment_to_itemOverviewFragment"
            app:destination="@id/itemOverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemConstructorFragment"
        android:name="com.nativeboys.password.manager.ui.itemConstructor.ItemConstructorFragment"
        android:label="fragment_item_constructor"
        tools:layout="@layout/fragment_item_constructor" >
        <argument
            android:name="ITEM_ID"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/categoryConstructorFragment"
        android:name="com.nativeboys.password.manager.ui.categoryConstructor.CategoryConstructorFragment"
        android:label="fragment_category_constructor"
        tools:layout="@layout/fragment_category_constructor" >
        <argument
            android:name="category_id"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/itemOverviewFragment"
        android:name="com.nativeboys.password.manager.ui.itemOverview.ItemOverviewFragment"
        android:label="fragment_item_overview"
        tools:layout="@layout/fragment_item_overview" >
        <argument
            android:name="item_id"
            app:argType="string" />
        <action
            android:id="@+id/action_itemOverviewFragment_to_itemConstructorFragment"
            app:popUpTo="@id/itemOverviewFragment"
            app:popUpToInclusive="true"
            app:destination="@id/itemConstructorFragment" />
    </fragment>

</navigation>